<%- include('partials/header') %>

    <main class="container" id="contact">
        <h2 class="contact__title">CONTACTO</h2>
        <form class="contact__form" id="contactForm">
            <div class="form__flex">

                <!-- Nombre -->
            <div class="form__box--flex">
                <label class="form__label" for="name">Nombre</label>
                <input class="form__input" id="name" type="text" placeholder="Ingresar nombre" required>          
            </div>

            <!-- Email  -->
            <div class="form__box--flex">
                <label class="form__label" for="emailAdd">Email</label>
                <input class="form__input" id="emailAdd" type="email" placeholder="Ingresar Email" required/>
            </div>
            </div>
            <div class="form__flex">
            <!-- Mensaje -->
            <div class="form__box--flex">
                <!-- <label class="form__label" for="message">Mensaje</label> -->
                <textarea class="form__input" id="message" type="text" cols="60" rows="10" placeholder="Ingresar mensaje" required"></textarea>
                
            </div>


            <!-- Enviar -->
            <div class="form__box--flex">
                <button class="form__btn btn btn--primary btn--large" type="submit">Enviar</button>
            </div>
            </div>
        </form>
    </main>



    <%- include('partials/footer') %>